@model IEnumerable<PetesPortfolio.Models.codeFirst.BlogPost>



<div class="Container h4">
    <div class="col-lg-12">

        <div class="container">
            <header>
                <h2>Pete's Blog</h2>
                @*<a href="index.html"><img src="~/Renda_Blog_Template/images/logo.png"></a>*@
