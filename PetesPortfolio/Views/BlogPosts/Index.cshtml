                                    <a href="post.html"><img src="~/img/blogpost_img_750x500.jpg" /></a>
                                </div>
                                <div class="blog-post-body">
                                    <h2><a href="@Url.Action("Details", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Title)</a></h2>
